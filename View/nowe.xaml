<UserControl x:Class="SklepexPOL.View.nowe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SklepexPOL.View"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="986">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
            <RowDefinition Height="1.4*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="#FFFFFBD5"/>
        </Grid.Background>
        <!--Wybór dostawcy-->
        <StackPanel Margin="10" Orientation="Horizontal" 
                    VerticalAlignment="Center" HorizontalAlignment="Left"
                    Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Margin="0,0,10,0" FontWeight="Bold">Dostawca:</TextBlock>
            <ComboBox IsEnabled="{Binding DeliveryEnabled}" Width="375" x:Name="sellerBox"
                      ItemsSource="{Binding Sellers}" SelectedItem="{Binding SelectedSeller}"
                      SelectedIndex="{Binding LOSIndex}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <!-- -->
                      
        </StackPanel>
        <!--Info o dostawcy-->
        <StackPanel Margin="10" Grid.Row="2" Grid.Column="0">
            <StackPanel Margin="0,0,0,10">
                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedSeller.Margin}"/>
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Marża dostawcy</TextBlock>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedSeller.DDays}"/>
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Czas dostawy</TextBlock>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedSeller.Country}"/>
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Kraj dostawcy</TextBlock>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedSeller.TaxName}"/>
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Cło</TextBlock>
            </StackPanel>
            <StackPanel Margin="0,5">
                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedSeller.TaxCost}"/>
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Wysokość cła</TextBlock>
            </StackPanel>
            <StackPanel>
                
                
            </StackPanel>
        </StackPanel>
        <!--kontrolki zamówienia-->
        <StackPanel Margin="10" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="13,0,10,0" FontWeight="Bold">Produkt:</TextBlock>
                <ComboBox x:Name="productsBox" Width="375" 
                          ItemsSource="{Binding Products}" 
                          SelectedItem="{Binding SelectedProduct}"
                          IsEnabled="{Binding IsProductsEnabled}"
                          SelectedIndex="{Binding SelectedProductIndex}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <!-- SelectionChanged="{Binding}"-->
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="10" Grid.Row="2" Grid.Column="1">
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <TextBlock Margin="0,0,10,0" FontWeight="Bold">Ilość:</TextBlock>
                <TextBox PreviewTextInput="IntValidator" Width="60" MaxLength="4" 
                         x:Name="CountBox" Text="{Binding ProductCountS, UpdateSourceTrigger=PropertyChanged}" FontSize="18"/>
            </StackPanel>
            <StackPanel Margin="0,10">
                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedProduct.Price}"/>
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Cena netto</TextBlock>
            </StackPanel>
            <StackPanel Margin="0,10">
                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedProduct.TaxName}"/>
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Podatek</TextBlock>
            </StackPanel>
            <StackPanel Margin="0,10">
                <TextBlock HorizontalAlignment="Center" Text="{Binding SelectedProduct.TaxCost}"/>
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Wysokość podatku</TextBlock>
            </StackPanel>
        </StackPanel>
        <!--listview-->
        <StackPanel Margin="10" Grid.Row="1" Grid.RowSpan="3" Grid.Column="2" VerticalAlignment="Top" Width="470">
            <ListView Height="420" ItemsSource="{Binding ShoppingCart}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Produkt" Width="260" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Ilość" Width="60" DisplayMemberBinding="{Binding Count}"/>
                        <GridViewColumn Header="Cena" Width="90" DisplayMemberBinding="{Binding Cost}"/>
                        <GridViewColumn Header="Usuń" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="-" 
                                            Command="{Binding Action}" 
                                            CommandParameter="{Binding ID}"
                                            Width="30"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <!--buttony-->
        <StackPanel Grid.Row="4" Grid.Column="1" 
                    Orientation="Horizontal" VerticalAlignment="Center" 
                    HorizontalAlignment="Right" Margin="10,0">
            <Button Command="{Binding}" CommandParameter="{Binding ElementName=CountBox, Path=Text}">Dodaj</Button>
        </StackPanel>
        <!--matematyka-->
        <StackPanel Margin="0,10" Grid.Row="3" Grid.ColumnSpan="2" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Margin="10,0">Koszt:</TextBlock>
                <TextBlock HorizontalAlignment="Center" Text="{Binding ProductCost}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Margin="10,0">Marża i podatki:</TextBlock>
                <TextBlock HorizontalAlignment="Center" Text="{Binding ProductTaxes}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="410">
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Center" FontWeight="Bold" Margin="10,0">Suma:</TextBlock>
                <TextBlock HorizontalAlignment="Center" Text="{Binding ProductSum}"/>
            </StackPanel>
        </StackPanel>
        <!--kwota zamówienia i przycisk złożenia zamówienia-->
        <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold">Kwota zamówienia:</TextBlock>
                <TextBlock VerticalAlignment="Center" Margin="0,0,10,0" Width="285"  Text="{Binding OrderCost}"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="2" Margin="10,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="10,0" Command="{Binding}">Wyczyść listę</Button>
            <Button Margin="10,0" Command="{Binding}">Złóż zamówienie</Button>
        </StackPanel>
    </Grid>
</UserControl>
